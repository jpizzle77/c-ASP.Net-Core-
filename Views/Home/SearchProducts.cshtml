@model List<Product>

@foreach(var product in Model)
{
    <h2> Orders for @product.product_name's </h2>
    <hr>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Customer Name</th>
                <th>Quantity Ordered</th>
                <th>Order Date</th>
            
            </tr>
        </thead>
    <tbody>
        @foreach(var product_order in product.product_orders)
            {  
                <tr>
                    <td>@product_order.customer_info.customer_name</td>
                    <td>@product_order.order_quantity</td>
                    <td>@product_order.created_at.ToString("D")</td>
                        
                </tr>
            }
    </tbody>
    </table>    
}

